generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// enum category
enum Category {
  berita
  artikel
}

// enum role 
enum Role {
  admin
}

// enum jenis kelamin 
enum Jenis_Kelamin {
  laki_laki
  perempuan
}

// news 
model News {
  id        Int      @id @default(autoincrement())
  category  Category @default(berita)
  title     String
  content   String
  thumbnail String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// admin 
model Admin {
  id       Int    @id @default(autoincrement())
  name     String
  email    String
  password String
  role     Role   @default(admin)

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

// ustad 
model Ustad {
  id            Int           @id @default(autoincrement())
  name          String
  jenis_kelamin Jenis_Kelamin
  tempat_lahir  String
  tanggal_lahir String
  alamat        String
  no_telepon    String
  jabatan       String
  ustad_img     String

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}
