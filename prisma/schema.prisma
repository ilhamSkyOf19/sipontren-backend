generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// enum category
enum Category {
  berita
  artikel
}

// enum role 
enum Role {
  admin
}

// enum jenis sekolah 
enum Sekolah {
  SD
  SMP
  SMA
}

// enum jenis kelamin 
enum Jenis_Kelamin {
  laki_laki
  perempuan
}

// news 
model News {
  id        Int      @id @default(autoincrement())
  category  Category @default(berita)
  title     String
  content   String
  thumbnail String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// admin 
model Admin {
  id       Int    @id @default(autoincrement())
  name     String
  email    String
  password String
  role     Role   @default(admin)

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

// ustad 
model Ustad {
  id            Int           @id @default(autoincrement())
  name          String
  jenis_kelamin Jenis_Kelamin
  tempat_lahir  String
  tanggal_lahir String
  alamat        String
  no_telepon    String
  jabatan       String
  ustad_img     String

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

// alumni
model Alumni {
  id          Int    @id @default(autoincrement())
  name        String
  angkatan    String
  img_alumni  String
  description String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// student 
model Student {
  id                  Int           @id @default(autoincrement())
  jenis_sekolah       Sekolah
  nisn                String
  nik                 String
  nama_lengkap        String
  jenis_kelamin       Jenis_Kelamin
  usia                Int
  tempat_lahir        String
  tanggal_lahir       String
  alamat              String
  no_telepon          String
  anak_ke             Int
  jumlah_saudara      Int
  asal_sekolah        String
  alamat_sekolah_asal String
  nama_lengkap_ayah   String
  nama_lengkap_ibu    String
  nama_lengkap_wali   String
  foto_formal         String
  fc_akta_kelahiran   String
  foto_kk             String
  fc_ktp              String
  fc_kis_kip          String
}

// pamflet 
model Pamflet {
  id        Int      @id @default(autoincrement())
  pamflet   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
